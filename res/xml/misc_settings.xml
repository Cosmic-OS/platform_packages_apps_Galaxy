<PreferenceScreen
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

        <Preference
             android:key="wakelock_blocker"
             android:fragment="com.cosmic.settings.fragments.WakeLockBlocker"
             android:title="@string/wakelock_blocker_title" />

        <Preference
             android:id="@+id/alarm_blocker"
             android:fragment="com.cosmic.settings.fragments.AlarmBlocker"
             android:title="@string/alarm_blocker" />

        <Preference
            android:title="@string/app_ops_settings"
            android:fragment="com.android.settings.applications.AppOpsSummary"/>

        <Preference
            android:key="systemappremover"
            android:fragment="com.cosmic.settings.fragments.SystemappRemover"
            android:title="@string/system_app_remover" />

        <com.android.settings.display.FontDialogPreference 
            android:key="custom_font" 
            android:title="@string/font_picker_title"
            android:persistent="false" />

        <Preference
            android:key="expanded_desktop_category"
            android:title="@string/expanded_desktop_title"
            android:summary="@string/expanded_desktop_summary"
            android:fragment="com.cosmic.settings.fragments.ExpandedDesktop" />

        <com.cosmic.settings.preferences.GlobalSettingSwitchPreference
            android:key="system_default_animation"
            android:title="@string/system_default_animation_title"
            android:summary="@string/system_default_animation_summary"
            android:defaultValue="false" />

        <com.cosmic.settings.preferences.GlobalSettingSwitchPreference
            android:key="wake_when_plugged_or_unplugged"
            android:title="@string/wakeup_when_plugged_unplugged_title"
            android:summary="@string/wakeup_when_plugged_unplugged_summary"
            android:defaultValue="true" />

        <com.cosmic.settings.preferences.GlobalSettingSwitchPreference
            android:key="show_cpu_overlay"
            android:title="@string/show_cpu_info"
            android:summary="@string/show_cpu_info_summary" 
            android:defaultValue="false" />
</PreferenceScreen>
