<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

     <Preference
            android:title="@string/statusbar_items_title" >
            <intent android:action="android.intent.action.MAIN"
                android:targetPackage="com.android.systemui"
                android:targetClass="com.android.systemui.tuner.StatusbarItemsActivity" />
    </Preference>

    <Preference
        android:key="status_bar_clock"
        android:fragment="com.cosmic.settings.fragments.StatusBarClockSettings"
        android:summary="@string/status_bar_clock_summary"
        android:title="@string/status_bar_clock_title" />

    <Preference
        android:key="status_bar_carrier"
        android:fragment="com.cosmic.settings.fragments.CarrierLabelSettings"
        android:title="@string/carrier_category" />

    <com.cosmic.settings.preferences.SystemSettingListPreference
        android:key="status_bar_logo"
        android:title="@string/status_bar_logo_title"
        android:dialogTitle="@string/status_bar_logo_dialog_title"
        android:entries="@array/status_bar_logo_entries"
        android:entryValues="@array/status_bar_logo_values"
        android:defaultValue="0" />

    <com.cosmic.settings.preferences.SystemSettingSwitchPreference
            android:key="status_bar_ime_switcher"
            android:title="@string/ime_switcher_notify"
            android:summary="@string/ime_switcher_notify_summary"
            android:defaultValue="false" />

    <com.cosmic.settings.preferences.SystemSettingSwitchPreference
            android:key="battery_save_mode_color"
            android:title="@string/battery_saver_color_title"
            android:summary="@string/battery_saver_color_summary"
            android:defaultValue="false" />

    <com.cosmic.settings.preferences.SystemSettingSwitchPreference
        android:key="network_traffic_state"
        android:title="@string/network_traffic_state_title"
        android:summary="@string/network_traffic_state_summary"
        android:defaultValue="true" />

    <com.cosmic.settings.preferences.CustomSeekBarPreference
        android:key="network_traffic_autohide_threshold"
        android:title="@string/network_traffic_autohide_threshold_title"
        android:max="10"
        settings:min="0"
        settings:units="" />
</PreferenceScreen>
